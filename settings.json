        },
        {
            "key": "z",
            "name": "Toggle Zen mode",
            "type": "command",
            "command": "workbench.action.toggleZenMode"
        },
        /* ────────────────────────────── Code Actions ────────────────────────────── */
        {
            "key": "c",
            "name": "+Code Actions",
            "type": "bindings",
