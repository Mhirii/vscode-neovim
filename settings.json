{
  /* ────────────────────────────────────────────────────────────────────────── */
  /*                                  Languages                                 */
  /* ────────────────────────────────────────────────────────────────────────── */
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "biome_lsp.trace.server": "messages",
  "cSpell.userWords": [
    "asvetliakov",
    "Codeium",
    "drawio",
    "Elysia",
    "Fira",
    "foldfix",
    "hediet",
    "highlightedyank",
    "hlsearch",
    "Jetbrains",
    "mhiri",
    "Mhirii",
    "neovim",
    "quickfix",
    "rgba",
    "vsvim",
    "whichkey"
  ],
  "editor.suggest.showReferences": true,
  /* -------------------------------------------------------------------------- */
  /*                                   editor                                   */
  /* -------------------------------------------------------------------------- */
  "editor.codeLens": true,
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.organizeImports": true,
    "source.organizeImports.biome": true,
    "quickfix.biome": true
  },
  "editor.fontFamily": "JetbrainsMono Nerd Font, Hack, 'FiraCode Nerd Font', 'monospace', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.renderCharacters": false,
  "editor.stickyScroll.enabled": true,
  "editor.suggest.insertMode": "replace",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "punctuation.definition.comment"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "window.menuBarVisibility": "toggle",
  "workbench.colorCustomizations": {
    "window.background": "#00000000"
  },
  "workbench.iconTheme": "a-file-icon-vscode",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "zenMode.hideLineNumbers": false,
  "workbench.colorTheme": "Tokyo Night",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.env.linux": {},
  "terminal.integrated.fontFamily": "JetbrainsMono Nerd Font",
  /* ────────────────────────────────────────────────────────────────────────── */
  /*                                   NeoVim                                   */
  /* ────────────────────────────────────────────────────────────────────────── */
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  /* ────────────────────────────────────────────────────────────────────────── */
  /*                                     Vim                                    */
  /* ────────────────────────────────────────────────────────────────────────── */
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.5)",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  "vim.hlsearch": true,
  "vim.leader": "<c-space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": [
        "g",
        "g",
        "V",
        "G"
      ],
      "before": [
        "<c-a>"
      ]
    },
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    {
      "after": [
        "^"
      ],
      "before": [
        "H"
      ]
    },
    {
      "after": [
        "$"
      ],
      "before": [
        "L"
      ]
    },
    {
      "before": [
        "leader",
        "b"
      ],
      "commands": [
        "bookmarks.toggle"
      ]
    },
    {
      "before": [
        "leader",
        "B"
      ],
      "commands": [
        "bookmarks.listFromAllFiles"
      ]
    },
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "whichkey.show"
      ]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "whichkey.show"
      ]
    },
  ],
  /* ────────────────────────────────────────────────────────────────────────── */
  /*                                 Extensions                                 */
  /* ────────────────────────────────────────────────────────────────────────── */
  "hediet.vscode-drawio.resizeImages": null,
  "extensions.ignoreRecommendations": false,
  "projectManager.git.baseFolders": [
    "/home/mhiri/code",
    "/home/mhiri/Documents",
    "/home/mhiri/projects",
    "/home/mhiri/Repos/Mhirii",
  ],
  "projectManager.sortList": "Recent",
  "projectManager.any.baseFolders": [
    "/home/mhiri/code",
    "/home/mhiri/projects",
    "/home/mhiri/Documents",
  ],
  "projectManager.any.maxDepthRecursion": 1,
  "projectManager.git.maxDepthRecursion": 4,
  /* ────────────────────────────────────────────────────────────────────────── */
  /*                               Comment Divider                              */
  /* ────────────────────────────────────────────────────────────────────────── */
  "comment-divider.lineFiller": "─",
  "comment-divider.mainHeaderFiller": "─",
  "comment-divider.subheaderFiller": "─",
  "go.inlayHints.assignVariableTypes": true,
  "go.inlayHints.functionTypeParameters": true,
  "go.inlayHints.parameterNames": true,
  "go.testExplorer.alwaysRunBenchmarks": true,
  "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/mhiri/.config/Code/User/vsvim/init.lua",
  /* ────────────────────────────────────────────────────────────────────────── */
  /*                                  WhichKey                                  */
  /* ────────────────────────────────────────────────────────────────────────── */
  "whichkey.sortOrder": "alphabetically",
  "whichkey.useFullWidthCharacters": true,
  "whichkey.bindings": [
    {
      "key": "/",
      "name": "Comment line",
      "type": "command",
      "command": "editor.action.commentLine"
    },
    {
      "key": ";",
      "name": "Show commands",
      "type": "command",
      "command": "workbench.action.showCommands"
    },
    {
      "key": ".",
      "name": "Code Action",
      "type": "command",
      "command": "editor.action.quickFix"
    },
    {
      "key": "e",
      "name": "Toggle Explorer",
      "type": "command",
      "command": "workbench.action.toggleSidebarVisibility"
    },
    {
      "key": "F",
      "name": "Find Here",
      "type": "command",
      "command": "actions.find"
    },
    {
      "key": "h",
      "name": "Horizontal split",
      "type": "command",
      "command": "workbench.action.splitEditorDown"
    },
    {
      "key": "i",
      "name": "Invert Boolean",
      "type": "command",
      "command": "extension.toggleBool"
    },
    {
      "key": "k",
      "name": "Hover",
      "type": "command",
      "command": "editor.action.showHover"
    },
    // {
    //   "key": "m",
    //   "name": "Toggle minimap",
    //   "type": "command",
    //   "command": "editor.action.toggleMinimap"
    // },
    {
      "key": "T",
      "name": "Toggle terminal",
      "type": "command",
      "command": "workbench.action.togglePanel"
    },
    {
      "key": "v",
      "name": "Vertical split",
      "type": "command",
      "command": "workbench.action.splitEditor"
    },
    {
      "key": "x",
      "name": "Close Buffer",
      "type": "command",
      "command": "workbench.action.closeActiveEditor"
    },
    {
      "key": "z",
      "name": "Toggle Zen mode",
      "type": "command",
      "command": "workbench.action.toggleZenMode"
    },
    /* ────────────────────────────── Code Actions ────────────────────────────── */
    {
      "key": "c",
      "name": "+Code Actions",
      "type": "bindings",
      "bindings": [
        {
          "key": "a",
          "name": "Quick Fix",
          "type": "command",
          "command": "editor.action.quickFix"
        },
        {
          "key": "f",
          "name": "Format",
          "type": "command",
          "command": "editor.action.format"
        },
        {
          "key": "d",
          "name": "Preview Declaration",
          "type": "command",
          "command": "editor.action.format"
        },
      ]
    },
    /* ───────────────────────────────── Buffers ──────────────────────────────── */
    {
      "key": "b",
      "name": "+Buffers",
      "type": "bindings",
      "bindings": [
        {
          "key": "c",
          "name": "Close active editor",
          "type": "command",
          "command": "workbench.action.closeActiveEditor"
        },
        {
          "key": "h",
          "name": "Move editor to left group",
          "type": "command",
          "command": "workbench.action.moveEditorToLeftGroup"
        },
        {
          "key": "j",
          "name": "Move editor to below group",
          "type": "command",
          "command": "workbench.action.moveEditorToBelowGroup"
        },
        {
          "key": "k",
          "name": "Move editor to above group",
          "type": "command",
          "command": "workbench.action.moveEditorToAboveGroup"
        },
        {
          "key": "l",
          "name": "Move editor to right group",
          "type": "command",
          "command": "workbench.action.moveEditorToRightGroup"
        },
        {
          "key": "n",
          "name": "Next editor",
          "type": "command",
          "command": "workbench.action.nextEditor"
        },
        {
          "key": "N",
          "name": "New untitled file",
          "type": "command",
          "command": "workbench.action.files.newUntitledFile"
        },
        {
          "key": "p",
          "name": "Previous editor",
          "type": "command",
          "command": "workbench.action.previousEditor"
        },
        {
          "key": "P",
          "name": "Paste clipboard to buffer",
          "type": "commands",
          "commands": [
            "editor.action.selectAll",
            "editor.action.clipboardPasteAction"
          ]
        },
        {
          "key": "s",
          "name": "Show all editor",
          "type": "command",
          "command": "workbench.action.showAllEditors"
        },
        {
          "key": "u",
          "name": "Reopen closed editor",
          "type": "command",
          "command": "workbench.action.reopenClosedEditor"
        },
        {
          "key": "x",
          "name": "Close other editors",
          "type": "command",
          "command": "workbench.action.closeOtherEditors"
        },
        {
          "key": "Y",
          "name": "Copy buffer to clipboard",
          "type": "commands",
          "commands": [
            "editor.action.selectAll",
            "editor.action.clipboardCopyAction",
            "cancelSelection"
          ]
        }
      ]
    },
    /* ────────────────────────────────── Debug ───────────────────────────────── */
    {
      "key": "d",
      "name": "+Debug",
      "type": "bindings",
      "bindings": [
        {
          "key": "b",
          "name": "Step back",
          "type": "command",
          "command": "workbench.action.debug.stepBack"
        },
        {
          "key": "c",
          "name": "Continue debug",
          "type": "command",
          "command": "workbench.action.debug.continue"
        },
        {
          "key": "i",
          "name": "Step into",
          "type": "command",
          "command": "workbench.action.debug.stepInto"
        },
        {
          "key": "j",
          "name": "Jump to cursor",
          "type": "command",
          "command": "debug.jumpToCursor"
        },
        {
          "key": "o",
          "name": "Step over",
          "type": "command",
          "command": "workbench.action.debug.stepOver"
        },
        {
          "key": "p",
          "name": "Pause debug",
          "type": "command",
          "command": "workbench.action.debug.pause"
        },
        {
          "key": "q",
          "name": "Quit debug",
          "type": "command",
          "command": "workbench.action.debug.stop"
        },
        {
          "key": "r",
